{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16", // Must match moduleResolution
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": true
  },
  "include": ["src/**/*"]
}
